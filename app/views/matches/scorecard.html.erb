<div id="tournament"><%= @tournament.name %></div>
<div id="team"><%= @teamone.teamname %> vs <%= @teamtwo.teamname %></div>
<div id="venue"><%= @formatarr[0] %> @ <%= @venue[0].venuename %></div>
<div id="inning"><%= @inning==1? 'First ':'Second ' %>Inning</div>
<div id="scores">Score:<%= @runs %>/<%= @wickets %><br/>Overs:<%= @overs %></div>
<div id="scorecard">

		<div id="battingend"><%= select 'end', 'battingend' , @battingend.collect {|p| [ p['name'],p['value']]}, :selected=>@battingendkey %></div>
		<!--Current striker's balls before boundary and balls before run-->


		<div>
			<table id="batsmansort">
				<tbody>
					<th class="Batting_summary">Batsman</th>
					<th class="Batting_summary"></th>
					<th class="Batting_summary"></th>
					<th class="Batting_summary"></th>
					<th class="Batting_summary"></th>
					<th class="Batting_summary">Runs</th>
					<th class="Batting_summary">Balls Faced</th>
					<th class="Batting_summary">Strike Rate</th>
					<th class="Batting_summary">0's</th>
					<th class="Batting_summary">1's</th>
					<th class="Batting_summary">2's</th>
					<th class="Batting_summary">3's</th>
					<th class="Batting_summary">4's</th>
					<th class="Batting_summary">5's</th>
					<th class="Batting_summary">6's</th>

					
					<% @batsmen.each do |b| %>
						<tr class="highlight">
							<td class="Batsman <%= b[:hilite] %>" data-bts="<%= b[:bts] %>"><%= b[:name] %></td>
							<td class="batting_position"><%= select 'batsman' , 'battingposition', @battingposition.collect {|p| p} , {:selected=> b[:counter]}, { :disabled=>b[:disabled]} %></td>
							<td class="Batsmanid" style="display:none"><%= b[:playerid] %></td>
							<td class="Batsmankey" style="display:none"><%= b[:playerkey] %></td>
							<td class="Dismissaltype" style="width:20px"><%= select 'Dismissaltype', 'DismissalTypeKey' , @dismissals, { :selected=>b[:outtypekey]},{ :disabled=>b[:disabled]} %></td>
							<td class="fielder"><%= select 'fielder', 'fielderkey' , @fielders,  {:selected=>b[:fielderkey]}, { :disabled=>b[:disabled]} %></td>
							<td class="wktakingbowler"><%= select 'wktakingbowler', 'wktakingbowlerkey' , @wktakingbowlers,  {:selected=>b[:wktakingbowlerkey]}, { :disabled=>b[:disabled]} %></td>
							<td class="batsman_runs"><%= b[:runs] %></td>	
							<td class="batsman_balls_faced"><%= b[:ballsfaced] %></td>
							<td class="batsman_strikerate"><%= number_with_precision(b[:strikerate], :precision => 1) %></td>
							<td class="batsman_zeros"><%= b[:zeros] %></td>
							<td class="batsman_ones"><%= b[:ones] %></td>
							<td class="batsman_twos"><%= b[:twos] %></td>
							<td class="batsman_threes"><%= b[:threes] %></td>
							<td class="batsman_fours"><%= b[:fours] %></td>
							<td class="batsman_fives"><%= b[:fives] %></td>
							<td class="batsman_sixes"><%= b[:sixes] %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>


		<div id="bowlingend"><%= select 'end', 'bowlingend' , @battingend.collect {|p| [ p['name'],p['value']]}, :selected=>@bowlingendkey %></div>

		<div>
			<table id="bowlersort">
				<tbody>
					<th class="Bowling_summary">Bowlers</th>
					<th class="Bowling_summary"></th>
					<th class="Bowling_summary"></th>
					<th class="Bowling_summary">Spell</th>
					<th class="Bowling_summary">Overs</th>
					<th class="Bowling_summary">Runs</th>
					<th class="Bowling_summary">Maidens</th>
					<th class="Bowling_summary">Wickets</th>
					<th class="Bowling_summary">Economy</th>
					<th class="Bowling_summary">1's</th>
					<th class="Bowling_summary">2's</th>
					<th class="Bowling_summary">3's</th>
					<th class="Bowling_summary">4's</th>
					<th class="Bowling_summary">6's</th>
					<th class="Bowling_summary">WD</th>
					<th class="Bowling_summary">NB</th>
					<th class="Bowling_summary">OTH</th>

					
					<% @bowlers.each do |b| %>
						<% if b[:name] != '' %>
							<tr class="highlight">
								<td class="Bowler <%= b[:hilite] %>"><%= b[:name] %></td>
								<td class="bowling_side"><ul><li class="<%= b[:rtw] %>">RTW</li><li class="<%= b[:otw] %>">OTW</li></ul></td>
								<td class="bowling_position"><%= select 'bowler','bowlingposition', @bowlingposition.collect {|p| p} , :selected=> b[:bowlingposition] %></td>
								<td class="Bowlerid" style="display:none"><%= b[:playerid] %></td>
								<td class="Bowlerkey" style="display:none"><%= b[:playerkey] %></td>
								<td class="bowler_spell"><%= select 'bowler','spell', [0,1,2,3,4,5].collect {|p| p}  , :selected=> b[:spell] %></td>
								<td class="bowler_overs"><%= b[:overs] %></td>
								<td class="bowler_runs"><%= b[:runs] %></td>
								<td class="bowler_maidens"><%= b[:maidens] %></td>
								<td class="bowler_wickets"><%= b[:wickets] %></td>
								<td class="bowler_econ"><%= number_with_precision(b[:economy], :precision => 1) %></td>
								<td class="bowler_ones"><%= b[:ones] %></td>
								<td class="bowler_twos"><%= b[:twos] %></td>
								<td class="bowler_threes"><%= b[:threes] %></td>
								<td class="bowler_fours"><%= b[:fours] %></td>
								<td class="bowler_sixes"><%= b[:sixes] %></td>
								<td class="bowler_wides"><%= b[:wides] %></td>
								<td class="bowler_noballs"><%= b[:noballs] %></td>
								<td class="bowler_others"><%= b[:others] %></td>
							</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
</div>

	
	
