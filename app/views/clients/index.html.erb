<h2>Listing clients</h2>

<table id="clientstable">
  <tr>
    <th>Username</th>
    <th>Encrypted password</th>
    <th>Name</th>
	<th>Email</th>
    <th>Home Country</th>
    <th>Account Type</th>
    <th></th>
	<th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= client.username %></td>
    <td><%= client.encrypted_password %></td>
	<td><%= client.name %></td>
	<td><%= client.email %></td>
	<td><%= client.country %></td>
	<td><%= client.actype %></td>
    <td><%= link_to 'Show', client %></td>
    <td><%= link_to 'Edit' , edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<td id"generate"><%= link_to 'Generate', {:controller=>'clients', :action=>'generatePass' , :id=>client.id }, :remote=>true %></td>
	<td id="temppass"></td>
  </tr>
<% end %>
</table>

