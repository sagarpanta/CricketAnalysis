	</ul>
	Editing Team
</h2>
<div id="date_drafted"><%= @date_drafted %></div>
<div id='modify_team_form' data-role="page"> 
  
  <div class="field" id="clientfield">
	<%= text_field_tag 'clientkey' , value=current_user.id, :hidden=>true %>
  </div>
  
  <table>
	<tr>
		<td class="caption1">Country</td>
		<td class="fields1"><%= select 'countrykey' ,'team' ,@countries , :selected=>@country_selected %></td>
	</tr>
	<tr>
		<td class="caption1">Format</td>
		<td class="fields1"><%= select 'team', 'formatkey', @formats, :selected=>@format_selected %></td>
	</tr>
  </table>  
  
  <table style="margin-left:5px">
	<tr>
		<td>
		  <div class="selection">
			<div class="selection_window">
				<table>
					<% @players.each do |p| %>
						<tr class="player">
							<td class="playerid"><%= p.playerid %></td>
							<td class="playername" data-id="<%= p.playerid %>" data-country="<%= p.countrykey %>" data-format="<%= p.formatkey %>"><%= p.fullname %></td>
						</tr>
					<% end %>
				</table>
			</div>
		  </div>
		</td>
		<td>
			<div class="drag_over">
				<img alt="in_the_team" src="/assets/greater_than.png" id="intheteam" /><br/>
				<img alt="out_of_the_team" src="/assets/less_than.png" id="outoftheteam" />
			</div>
		</td>
		<td>
			<div class="selected">
			  <div class="selected_window">
				<table id="removable_players_table"></table>
			  </div>
			</div>
		</td>
	</tr>
  </table>
  

 
  <table>
  	<tr>
		<td class="caption1">Team Name</td>
		<td class="fields1"><%= text_field 'team', 'teamname' , :value=> @teamname %></td>
	</tr>
	<tr>
		<td class="caption1">Coach</td>
		<td class="fields1"><%= select 'team', 'coachkey', @coaches, :selected=> @coach_selected %></td>
	</tr>
	<tr>
		<td class="caption1">Manager</td>
		<td class="fields1"><%= select 'team', 'managerkey', @managers, :selected=>@manager_selected %></td>
	</tr>
	
	<tr>
		<td class="caption1">Team ID</td>
		<td class="fields1"><%= text_field 'team', 'teamid', :disabled=>"disabled" %></td>
	</tr>
	<tr>
		<td class="caption1">Team Type</td>
		<td class="fields1"><%= select  'team', 'teamtypekey', @teamtypes, :selected=>@teamtype %></td>
	</tr>
	

  </table> 

  <div id="success_message"></div>   
  <div id="update_team" class="actions">
	  <%= image_tag('/assets/update.png') %>
  </div>
 </div>
 
  <div id="modifyteam"><%= link_to 'Teams', teams_path %> | <%= link_to 'Next (New Venue)', new_venue_path %></div>




