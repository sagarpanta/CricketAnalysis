			<td class="cnav"><%= link_to 'Players' , players_path %></td>
			<td class="cnav"><%= link_to 'Managers' , managers_path %></td>
			<td class="cnav"><%= link_to 'Coaches' , coaches_path %></td>
			<td class="cnav"><%= link_to 'Teams' , teams_path %></td>
			<td class="cnav"><%= link_to 'Venues' , venues_path %></td>
			<td class="cnav"><%= link_to 'Matches' , matches_path %></td>
		</tr>
	</table>
</div>

<%= yield %>
<script>
function onFailSoHard(e){
	
	if(e.code==1){
		alert('User denied access to their camera');
	}
	else{
		alert('getUserMedia() not supported in your browser.');
	}
}

(function(){
	var video=document.querySelector('#basic-stream');
	var button=document.querySelector('#capture-button');
	var localMediaStream=null
	if (button){
		button.addEventListener('click',function(e){
			if(navigator.getUserMedia){
				navigator.getUserMedia('video',function(stream){
					video.src=stream;
					video.controls=true;
					localMediaStream=stream;
				},onFailSoHard);
			}
			else if(navigator.webkitGetUserMedia){
				alert('i m here');
				navigator.webkitGetUserMedia({video:true},function(stream){
					video.src=window.webkitURL.createObjectURL(stream);
					video.controls=true;localMediaStream=stream;
				},onFailSoHard);
			}
			else{
				onFailSoHard({target:video});
			}
		},false);
		

		document.querySelector('#stop-button').addEventListener('click',function(e){
			video.pause();
			localMediaStream.stop();
			//recorder.getRecordedData(function(blob){
			//	 fs.root.getFile('blob', {create: true}, function(fileEntry) {
			//		console.log('blob has been created');

			//	}, function(e){
			//		console.log('blob has not been created');
			//	});
			//});
		},false);
	}
})();

</script>
</body>
</html>

